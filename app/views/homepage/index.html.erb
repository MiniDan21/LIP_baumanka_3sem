<div class="header">
    <div class="nav">
    <li>
        <a href="/">В начало</a>
    </li>
    </div>
    <div class="log">
    <li id="links-log">
        <% unless User.find_by_id(session[:current_user_id]).nil? %>
            <a href="/log/sign_out">Выйти</a>
        <% else %>
            <a href="/log/sign_in">Войти</a>
            <a href="/users/new">Зарегистрироваться</a>
        <% end %>
    </li>
    </div>
</div>
<div class="main">
    <div class="container">
        <p>На сайте зарегистрированно <%= User.count %></p>
        <% if !session[:current_user_id].nil? %>
            <div id="form">
                <%= form_with url: "root/show", method: :get do |form| %>
                <%= form.label :query, "Введите число:", :class => 'label-form' %>
                <%= form.text_field :query, value: "100" %>
                <%= form.submit "Поиск", class: 'btn btn-danger' %>
                <% end %>
                <%= flash[:notice] %>
            </div>
        <% end %>
        <div id="result"></div>
    </div>
</div>
<div class="footer">
</div>

